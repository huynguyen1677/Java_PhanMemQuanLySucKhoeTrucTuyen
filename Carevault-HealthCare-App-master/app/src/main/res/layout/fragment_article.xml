<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".fragments.ArticleFragment">

    <RelativeLayout
        android:id="@+id/indexArticles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#e9edff"
        android:padding="12dp">

        <TextView
            android:id="@+id/pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/latoheavy"
            android:gravity="center_horizontal"
            android:text="Bài viết"
            android:textColor="#1D212D"
            android:textSize="22sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/indexArticles"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp">

            <TextView
                android:id="@+id/popularArticles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latobold"
                android:text="Bài viết phổ biến"
                android:textColor="#1D212D"
                android:textSize="18sp" />

            <HorizontalScrollView
                android:id="@+id/scrollbarpopular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/popularArticles"
                android:layout_marginTop="18dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/covid"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:background="@drawable/selected_background"
                        android:backgroundTint="#9DCEFF"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center"
                        android:text="Covid-19"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/diet"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/selected_background"
                        android:backgroundTint="#9DCEFF"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center"
                        android:text="Chế độ ăn uống"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/fitness"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/selected_background"
                        android:backgroundTint="#9DCEFF"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center"
                        android:text="Thể dục"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scrollbarpopular"
                android:layout_marginTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latobold"
                    android:text="Bài viết thịnh hành"
                    android:textColor="#1D212D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/trend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/latobold"
                    android:text="Xem tất cả"
                    android:textAllCaps="false"
                    android:textColor="#1D212D"
                    android:textSize="16sp" />

            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/scrolltrending"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@+id/trending"
                android:layout_marginTop="19dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/sample1"
                        android:layout_width="195dp"
                        android:layout_height="230dp"
                        android:background="@drawable/selected_background"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/covid1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="-33dp"
                            android:src="@drawable/covid1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="-29dp"
                            android:fontFamily="@font/latobold"
                            android:text="Covid-19"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/latoregular"
                            android:text="So sánh vắc xin COVID-19 AstraZeneca và Sinovac"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Các phần tử tiếp theo sẽ tương tự -->
                </LinearLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:id="@+id/relatedarticles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scrolltrending"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latobold"
                    android:text="Bài viết liên quan"
                    android:textColor="#1D212D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/seeall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/latobold"
                    android:text="Xem tất cả"
                    android:textAllCaps="false"
                    android:textColor="#1D212D"
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relatedarticles"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/sample5"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@drawable/selected_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="66dp"
                        android:layout_marginStart="-15dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/relatedcovid1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/latobold"
                            android:text="25 loại trái cây tốt nhất cho sức khỏe theo chuyên gia dinh dưỡng"
                            android:textColor="#ffffff"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/latoregular"
                                android:text="5 phút đọc"
                                android:textColor="#000000"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Các phần tử tiếp theo sẽ tương tự -->
            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
